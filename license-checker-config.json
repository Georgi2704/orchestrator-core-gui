{
    "ignore": [
        ".git",
        "charts",
        ".gitlab",
        "!(src)",
        ".storybook",
        "**.storyshot",
        "**.snap",
        "**.ttf",
        "**.md",
        "**.mdx",
        "coverage"
    ],
    "license": "LICENSE_HEADER",
    "trailingWhitespace": "TRIM",
    "licenseFormats": {
        "js|ts|jsx|tsx|template": {
            "prepend": "/*",
            "append": " *\n */",
            "eachLine": {
                "prepend": " * "
            }
        },
        "scss": {
            "prepend": "/*!",
            "append": " *\n */",
            "eachLine": {
                "prepend": " * "
            }
        },
        "html|xml|svg": {
            "prepend": "<!--",
            "append": "  ~\n  -->",
            "eachLine": {
                "prepend": "  ~ "
            }
        },
        "txt": {}
    }
}
